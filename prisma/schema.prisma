generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  email           String            @unique
  createdAt       DateTime          @default(now())
  password        String?
  businessAddress String?
  businessName    String?
  role            UserRole          @default(CUSTOMER)
  clerkUserId     String            @unique
  imageUrl        String?
  phone_numbers   String?
  first_name      String
  last_name       String?
  username        String            @unique
  businessBio     String?
  FittingProduct  FittingProduct[]  @relation("FittingProductOwner")
  OwnerFittings   FittingSchedule[] @relation("OwnerFittings")
  UserFittings    FittingSchedule[] @relation("UserFittings")
  FittingSlot     FittingSlot[]
  Products        Products[]
  OwnerRental     Rental[]          @relation("OwnerRental")
  UserRental      Rental[]          @relation("UserRental")
  ScheduleBlock   ScheduleBlock[]
  WeeklySlot      WeeklySlot[]
  Wishlist        Wishlist[]
}

model Products {
  id              Int               @id @default(autoincrement())
  name            String
  createdAt       DateTime          @default(now())
  images          String[]
  description     String
  ownerId         Int
  category        ProductCategory   @default(LAINNYA)
  owner           User              @relation(fields: [ownerId], references: [id])
  VariantProducts VariantProducts[]
  Wishlist        Wishlist[]
}

model VariantProducts {
  id             Int              @id @default(autoincrement())
  size           String
  color          String
  price          Float
  isAvailable    Boolean          @default(true)
  createdAt      DateTime         @default(now())
  productsId     Int
  bustlength     Float?
  waistlength    Float?
  length         Float?
  isRented       Boolean          @default(false)
  sku            String           @unique
  FittingProduct FittingProduct[]
  RentalItem     RentalItem[]
  products       Products         @relation(fields: [productsId], references: [id])

  @@unique([size, color, bustlength, waistlength, length, productsId, sku])
}

model Wishlist {
  id         Int      @id @default(autoincrement())
  userId     Int
  createdAt  DateTime @default(now())
  productsId Int
  products   Products @relation(fields: [productsId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Rental {
  id             Int          @id @default(autoincrement())
  userId         Int
  startDate      DateTime
  endDate        DateTime
  status         RentalStatus @default(BELUM_LUNAS)
  createdAt      DateTime     @default(now())
  rentalCode     String       @unique
  updatedAt      DateTime     @updatedAt
  ownerId        Int
  additionalInfo String?
  owner          User         @relation("OwnerRental", fields: [ownerId], references: [id])
  user           User         @relation("UserRental", fields: [userId], references: [id])
  rentalItems    RentalItem[]
  Return         Return[]
  Tracking       Tracking[]

  @@index([status])
  @@index([startDate])
}

model RentalItem {
  id               Int             @id @default(autoincrement())
  rentalId         Int
  variantProductId Int
  rental           Rental          @relation(fields: [rentalId], references: [id])
  variantProduct   VariantProducts @relation(fields: [variantProductId], references: [id])
}

model Tracking {
  id        Int            @id @default(autoincrement())
  rentalId  Int
  status    TrackingStatus @default(RENTAL_ONGOING)
  updatedAt DateTime       @default(now())
  rental    Rental         @relation(fields: [rentalId], references: [id])
}

model Return {
  id         Int             @id @default(autoincrement())
  rentalId   Int
  returnDate DateTime
  condition  ReturnCondition @default(GOOD)
  createdAt  DateTime        @default(now())
  rental     Rental          @relation(fields: [rentalId], references: [id])
}

model FittingSchedule {
  id             Int              @id @default(autoincrement())
  userId         Int
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  status         FittingStatus    @default(PENDING)
  fittingSlotId  Int              @unique
  note           String?
  duration       Int
  ownerId        Int
  FittingProduct FittingProduct[]
  fittingSlot    FittingSlot      @relation(fields: [fittingSlotId], references: [id])
  owner          User             @relation("OwnerFittings", fields: [ownerId], references: [id])
  user           User             @relation("UserFittings", fields: [userId], references: [id])
}

model FittingSlot {
  id              Int              @id @default(autoincrement())
  ownerId         Int
  dateTime        DateTime
  isAutoConfirm   Boolean          @default(false)
  isBooked        Boolean          @default(false)
  fittingSchedule FittingSchedule?
  owner           User             @relation(fields: [ownerId], references: [id])
}

model WeeklySlot {
  id        Int       @id @default(autoincrement())
  ownerId   Int
  isEnabled Boolean   @default(true)
  dayOfWeek DayOfWeek
  startTime DateTime  @db.Time(6)
  endTime   DateTime  @db.Time(6)
  owner     User      @relation(fields: [ownerId], references: [id])

  @@unique([ownerId, dayOfWeek])
}

model ScheduleBlock {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  startTime   DateTime
  endTime     DateTime
  description String
  owner       User     @relation(fields: [ownerId], references: [id])
}

model FittingProduct {
  fittingId        Int
  variantProductId Int
  id               Int             @id @default(autoincrement())
  ownerId          Int
  fittingSchedule  FittingSchedule @relation(fields: [fittingId], references: [id])
  owner            User            @relation("FittingProductOwner", fields: [ownerId], references: [id])
  variantProduct   VariantProducts @relation(fields: [variantProductId], references: [id])
}

enum UserRole {
  CUSTOMER
  ADMIN
  OWNER
}

enum RentalStatus {
  BELUM_LUNAS
  LUNAS
  TERLAMBAT
  SELESAI
}

enum FittingStatus {
  PENDING
  CONFIRMED
  REJECTED
  COMPLETED
  CANCELED
}

enum DayOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

enum TrackingStatus {
  RENTAL_ONGOING
  RETURN_PENDING
  RETURNED
  COMPLETED
}

enum ReturnCondition {
  GOOD
  DAMAGED
  LOST
}

enum ProductCategory {
  KEBAYA
  PAKAIAN_ADAT
  GAUN_PENGANTIN
  JARIK
  SELOP
  BESKAP
  SELENDANG
  JAS
  LAINNYA
}
